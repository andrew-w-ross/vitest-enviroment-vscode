{
    "name": "vitest-environment-vscode",
    "version": "0.1.0",
    "type": "module",
    "packageManager": "yarn@4.10.3",
    "description": "A Vitest environment for VS Code",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "vite build",
        "dev": "vite build --watch",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "vitest",
        "vscode",
        "environment"
    ],
    "author": "",
    "license": "MIT",
    "prettier": {
        "useTabs": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 100,
        "arrowParens": "always"
    },
    "devDependencies": {
        "@eslint/compat": "^1.4.0",
        "@eslint/js": "^9.38.0",
        "@types/node": "^24.8.1",
        "eslint": "^9.38.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.14.0",
        "prettier": "^3.4.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.1",
        "vite": "^7.1.10",
        "vite-plugin-dts": "^4.5.4"
    },
    "peerDependencies": {
        "vitest": ">=1.0.0"
    }
}
