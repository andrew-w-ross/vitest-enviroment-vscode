{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"lib": ["ESNext"],
		"moduleResolution": "bundler",
		"types": ["node"],
		"noEmit": true,
		"composite": false,
		"rootDir": "${configDir}",
		"tsBuildInfoFile": "${configDir}/node_modules/.cache/tsbuildinfo/tsconfig.test.tsbuildinfo"
	},
	"include": ["${configDir}/src/**/*.ts"]
}
