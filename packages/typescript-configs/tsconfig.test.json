{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "bundler",
		"types": ["node"],
		"noEmit": true,
		"composite": false,
		"rootDir": "${configDir}"
	},
	"include": [
		"${configDir}/src/**/*.test.ts",
		"${configDir}/src/**/*.spec.ts",
		"${configDir}/src/**/*.test-d.ts"
	],
	"references": [{ "path": "./tsconfig.app.json" }]
}
