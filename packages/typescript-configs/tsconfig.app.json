{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
		"types": ["node"],
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"rootDir": "${configDir}/src",
		"outDir": "${configDir}/dist",
		"tsBuildInfoFile": "${configDir}/node_modules/.cache/tsbuildinfo/tsconfig.app.tsbuildinfo"
	},
	"include": ["${configDir}/src/**/*.ts"],
	"exclude": ["${configDir}/src/**/*.{test,spec,test-d}.ts"]
}
