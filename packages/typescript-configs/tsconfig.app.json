{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"lib": ["ESNext"],
		"moduleResolution": "bundler",
		"types": ["node"],
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"rootDir": "${configDir}/src",
		"outDir": "${configDir}/dist",
		"tsBuildInfoFile": "${configDir}/node_modules/.cache/tsbuildinfo/tsconfig.app.tsbuildinfo"
	},
	"include": ["${configDir}/src/**/*.ts"],
	"exclude": [
		"${configDir}/src/**/*.test.ts",
		"${configDir}/src/**/*.spec.ts",
		"${configDir}/src/**/*.test-d.ts"
	]
}
