{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "yarn build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "build:vitest-environment-vscode",
			"type": "shell",
			"command": "yarn build --filter=vitest-environment-vscode",
			"options": {
				"cwd": "${workspaceFolder}/packages/vitest-environment-vscode"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "build:watch vitest-enviroment-vscode",
			"type": "shell",
			"command": "yarn turbo run build:watch --filter=vitest-environment-vscode",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^(.*)$",
					"file": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "vitest-environment-vscode#build:watch",
					"endsPattern": "built in|watching for file changes"
				}
			}
		},
		{
			"label": "build:dummy-extension",
			"type": "shell",
			"command": "yarn build --filter=dummy-extension",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "typecheck",
			"type": "shell",
			"command": "yarn typecheck",
			"group": "build",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "typecheck:vitest-environment-vscode",
			"type": "shell",
			"command": "yarn typecheck --filter=vitest-environment-vscode --log-prefix=none",
			"group": "build",
			"problemMatcher": {
				"base": "$tsc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}/packages/vitest-environment-vscode"
				]
			}
		},
		{
			"label": "typecheck:watch",
			"type": "shell",
			"command": "yarn typecheck:watch",
			"isBackground": true,
			"problemMatcher": ["$tsc-watch"]
		},
		{
			"label": "test",
			"type": "shell",
			"command": "yarn test",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "test:watch",
			"type": "shell",
			"command": "yarn test:watch",
			"group": "test",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "lint",
			"type": "shell",
			"command": "yarn lint",
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "lint:fix",
			"type": "shell",
			"command": "yarn lint:fix",
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "build:debug-pool",
			"dependsOn": ["build:dummy-extension", "typecheck:vitest-environment-vscode"],
			"problemMatcher": []
		}
	]
}
