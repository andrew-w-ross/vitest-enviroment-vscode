{
	// Combined launch configurations for this workspace.
	// - Vitest: debug current file, debug all tests, attach to a running process.
	// - ExtensionHost: existing configs for the dummy extension and worker debug.
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Pool",
			"autoAttachChildProcesses": true,
			"cwd": "${workspaceFolder}/packages/dummy-extension",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
			"args": ["run", "--inspect-brk", "--no-file-parallelism"],
			"smartStep": true,
			"console": "integratedTerminal",
			"outFiles": ["${workspaceFolder}/packages/**/dist/**/*.js"],
			"sourceMaps": true,
			"preLaunchTask": "build:debug-pool"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to vscode-worker",
			"continueOnAttach": true,
			"port": 9229
		}
	],
	"compounds": [
		{
			"name": "Debug Vitest",
			"configurations": ["Debug Pool", "Attach to vscode-worker"],
			"stopAll": true
		}
	]
}
