{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"tasks": {
		"build": {
			"dependsOn": ["^build", "^typecheck"],
			"outputs": ["dist/**", ".vite/**"]
		},
		"build:watch": {
			"dependsOn": ["^build", "^typecheck"],
			"cache": false,
			"persistent": true
		},
		"typecheck": {
			"dependsOn": ["^typecheck"],
			"outputs": ["dist/**/*.d.ts", "dist/**/*.d.ts.map"]
		},
		"typecheck:watch": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"test:watch": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"lint:fix": {
			"dependsOn": ["^build"],
			"cache": false,
			"outputs": []
		},
		"prerelease": {
			"dependsOn": ["^build", "build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
